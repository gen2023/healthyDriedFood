<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
	<name>MOD_SLIDER_TITLE</name>
	<author>Sofona</author>
	<creationDate>2024-05</creationDate>
	<copyright>(C) 2024</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>master.sofona@gmail.com</authorEmail>
	<authorUrl>https://sofona.com/</authorUrl>
	<version>1.1.4</version>
	<description>MOD_SLIDER_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Module\Slider</namespace>
	<media destination="mod_slider" folder="media">
    <folder>js</folder>
    <folder>css</folder>
  </media>
	<files>
		<folder module="mod_slider">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
		<folder>forms</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/mod_slider.ini</language>
		<language tag="en-GB">language/en-GB/mod_slider.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/mod_slider.ini</language>
		<language tag="ru-RU">language/ru-RU/mod_slider.sys.ini</language>
		<language tag="uk-UA">language/uk-UA/mod_slider.ini</language>
		<language tag="uk-UA">language/uk-UA/mod_slider.sys.ini</language>
	</languages>
	<help key="Site_Modules:_Slider" />
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field 
					name="setkalist" 
					type="subform" 
					formsource="modules/mod_slider/forms/list.xml" 
					class="advancedSelect" 
					min="0" 
					max="9999" 
					multiple="true" 
					layout="joomla.form.field.subform.repeatable" 
					groupByFieldset="true" 
					label="Список" 
					description="Список" 
					/>
			</fieldset>
			<fieldset name="swiper_setting" label="MOD_SLIDER_SWIPER_SETTING" >
        <field name="swiperclass_sfx" type="text" label="MOD_SLIDER_CLASSNAME_SWIPER" default="nameClass" />
        <field
					name="navegation_slider"
					type="radio"
					label="MOD_SLIDER_NAVIGATION_SLIDER"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
        <field
					name="use_swiper"
					type="list"
					label="MOD_SLIDER_USE_SWIPER"
					layout="joomla.form.field.radio.switcher"
					default="0"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field> 
        <field
					name="use_script_slider"
					type="list"
					label="MOD_SLIDER_USE_SCRIPT_SLIDER"
					layout="joomla.form.field.radio.switcher"
					default="0"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field> 
				<field 
					name="script_slider" 
					type="textarea" 
					filter="raw" 
					label="MOD_SLIDER_SCRIPT" 
					rows="5" 
					cols="35" 
          default="document.addEventListener('DOMContentLoaded', event => {
						new Swiper('.nameClass', {
  						    loop: false,
  						    speed: 3000,
  							spaceBetween: 10,
  							slidesPerView: 1,
  							pagination: {
    							el: '.swiper-pagination',
  							},
							navigation: {
								nextEl: '.swiper-button-next',
								prevEl: '.swiper-button-prev',
							},
						});
					});" 
          showon="use_script_slider:1"
				/>   
      </fieldset>
      <fieldset name="advanced">
        <field
          name="layout"
          type="modulelayout"
					class="form-select"
          label="JFIELD_ALT_LAYOUT_LABEL"
          description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
        <field
          name="moduleclass_sfx"
          type="text"
          label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
          default=""
          description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />                    
        <field
          name="cache"
          type="list"
          default="0"
          label="COM_MODULES_FIELD_CACHING_LABEL"
          description="COM_MODULES_FIELD_CACHING_DESC">
        		<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        </field>             
      </fieldset>
		</fields>
	</config>
	<updateservers>
    <server type="extension" name="MOD_SLIDER_TITLE">https://gitvault.sofona.info/mod_slider/updateModSlider.xml</server>
  </updateservers>
</extension>
