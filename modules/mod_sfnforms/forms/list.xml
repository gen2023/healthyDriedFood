<?xml version="1.0" encoding="UTF-8"?>
<form>
  <fieldset name="sample" class="sample-subform">

    <field name="type_input" type="list" default="text" label="MOD_SFNFORMS_TYPE_INPUT" >
      <option value="tel">MOD_SFNFORMS_FIELD_PHONE</option>
      <option value="email">MOD_SFNFORMS_FIELD_EMAIL</option>
      <option value="hidden">MOD_SFNFORMS_FIELD_HIDDEN</option>
      <option value="text">MOD_SFNFORMS_FIELD_TEXTBOX</option>
			<option value="textarea">MOD_SFNFORMS_FIELD_TEXTAREA</option>
			<option value="select">MOD_SFNFORMS_FIELD_DROPBOX</option>
			<option value="radio">MOD_SFNFORMS_FIELD_RADIO</option>
			<option value="checkbox">MOD_SFNFORMS_FIELD_CHECKBOX</option>
			<option value="number">MOD_SFNFORMS_FIELD_NUMBER</option>
    </field>
          
    <field 
      name="field_label" 
      type="text" 
      label="MOD_SFNFORMS_LABEL_FOR_INPUT" 
      description="MOD_SFNFORMS_LABEL_FOR_INPUT_DESCRIPTION" 
      showon="type_input:tel[OR]type_input:email[OR]type_input:text[OR]type_input:textarea[OR]type_input:select[OR]type_input:radio[OR]type_input:checkbox[OR]type_input:number"/>

    <field name="field_name" type="text" label="MOD_SFNFORMS_NAME_INPUT" description="MOD_SFNFORMS_NAME_INPUT_DESCRIPTION" required="true"/>
    <field name="field_value" type="text" label="MOD_SFNFORMS_VALUE_INPUT" showon="type_input:hidden"/>

    <field 
      name="field_placeholder" 
      type="text" 
      showon="type_input:tel[OR]type_input:email[OR]type_input:text[OR]type_input:textarea[OR]type_input:number[OR]type_input:select"
      label="MOD_SFNFORMS_PLACEHOLDER"
      description="MOD_SFNFORMS_LABEL_FOR_INPUT_DESCRIPTION" />

    <field name="field_class_name" type="text" label="MOD_SFNFORMS_CLASS_NAME_INPUT" description="MOD_SFNFORMS_CLASS_NAME_INPUT_DESCRIPTION"/>

		<field name="field_required" type="radio" default="1" class="btn-group btn-group-yesno" label="MOD_SFNFORMS_REQUIRED">
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>

		<field 
      name="list_block" 
      type="textarea" 
      default="" 
      filter="raw" 
      label="MOD_SFNFORMS_LIST_INPUT" 
      description="MOD_SFNFORMS_LIST_INPUT_DESC" 
      rows="5" 
      cols="35" 
      showon="type_input:select[OR]type_input:radio[OR]type_input:checkbox" />

    <field 
      name="field_validate" 
      type="radio" 
      default="0" 
      class="btn-group btn-group-yesno" 
      label="MOD_SFNFORMS_VALIDATE" 
      showon="type_input:tel[OR]type_input:text[OR]type_input:textarea[ORtype_input:number">
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>

    <field name="field_validate_option" type="list" default="text" label="MOD_SFNFORMS_VALIDATE_OPTION" showon="field_validate:1">
      <option value="min_max" showon="type_input:tel[OR]type_input:text[OR]type_input:textarea">MOD_SFNFORMS_VALIDATE_OPTION_MIN_MAX</option>
      <option value="validText" showon="type_input:text[OR]type_input:textarea">MOD_SFNFORMS_VALIDATE_OPTION_TEXT</option>
      <option value="validTextNumber" showon="type_input:text[OR]type_input:textarea">MOD_SFNFORMS_VALIDATE_OPTION_TEXT_NUMBER</option>
      <option value="validNumber" showon="type_input:text[OR]type_input:tel[OR]type_input:number">MOD_SFNFORMS_VALIDATE_OPTION_NUMBER</option>
			<option value="phoneUA" showon="type_input:tel">MOD_SFNFORMS_VALIDATE_OPTION_TEL_UA</option>
    </field>

    <field name="input_len_min" type="number" label="MOD_SFNFORMS_VALIDATE_OPTION_MIN" showon="field_validate:1" />
    <field name="input_len_max" type="number" label="MOD_SFNFORMS_VALIDATE_OPTION_MAX" showon="field_validate:1" />
          
  </fieldset>
</form>