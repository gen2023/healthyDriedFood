<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	<name>Nevigen JShop Recently Viewed Products</name>
	<author>Nevigen.com</author>
	<creationDate>June 2024</creationDate>
	<copyright>copyright Â© Nevigen.com. All rights reserved</copyright>
	<license>Proprietary. Copyrighted Commercial Software</license>
	<authorEmail>support@nevigen.com</authorEmail>
	<authorUrl>https://nevigen.com</authorUrl>
	<version>1.0.0</version>
	<description>Nevigen JShop Recently Viewed Products Module</description>
	<namespace path="src">Joomla\Module\NevigenRecentlyViewedProducts</namespace>
	<files>
		<folder module="mod_nevigen_jshop_rvp">src</folder>
		<folder>services</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="show_image" type="radio"
					   default="1"
					   label="Image"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_image_label" type="radio"
					   default="0"
					   label="Label"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="allow_review" type="radio"
					   default="0"
					   label="Rating"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="short_description" type="radio"
					   default="0"
					   label="Short description"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="manufacturer_name" type="radio"
					   default="0"
					   label="Manufacturer"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="product_quantity" type="radio"
					   default="0"
					   label="Product quantity"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="product_old_price" type="radio"
					   default="0"
					   label="Old Price"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="product_price_default" type="radio"
					   default="0"
					   label="Default price"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="display_price" type="radio"
					   default="1"
					   label="Price"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="show_tax_product" type="radio"
					   default="0"
					   label="Tax"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_plus_shipping_in_product" type="radio"
					   default="0"
					   label="Text &quot;Plus shipping&quot;"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="basic_price_info" type="radio"
					   default="0"
					   label="Basic price"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="product_weight" type="radio"
					   default="0"
					   label="Weight"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="delivery_time" type="radio"
					   default="0"
					   label="Delivery time"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="extra_field" type="radio"
					   default="0"
					   label="Extra fields"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="vendor" type="radio"
					   default="0"
					   label="Vendor"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="product_list_qty_stock" type="radio"
					   default="0"
					   label="Quantity in stock"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="show_button" type="radio"
					   default="1"
					   label="Buttons"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="show_button_buy" type="radio"
					   default="0"
					   label="Button &quot;Buy&quot;"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field name="show_button_detal" type="radio"
					   default="1"
					   label="Button &quot;Detail&quot;"
					   description=""
					   layout="joomla.form.field.radio.switcher"
					   filter="integer">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout"
					   label="JFIELD_ALT_LAYOUT_LABEL"
					   description="JFIELD_ALT_MODULE_LAYOUT_DESC"
					   class="form-select"/>
				<field name="moduleclass_sfx" type="textarea"
					   label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					   description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					   rows="3"/>
				<field name="cache" type="list"
					   label="COM_MODULES_FIELD_CACHING_LABEL"
					   description="COM_MODULES_FIELD_CACHING_DESC"
					   default="1">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text"
					   label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					   description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					   default="900"/>
				<field name="cachemode" type="hidden"
					   default="static">
					<option value="static"/>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>