			<language tag="ru-RU">ru-RU/com_nevigen_audit.sys.ini</language>
			<language tag="uk-UA">uk-UA/com_nevigen_audit.ini</language>
			<language tag="uk-UA">uk-UA/com_nevigen_audit.sys.ini</language>
		</languages>
	</administration>
	<media destination="com_nevigen_audit" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
		<filename>joomla.asset.json</filename>
	</media>
	<layouts destination="components/nevigen_audit" folder="layouts">
		<folder>administrator</folder>
		<folder>field</folder>
	</layouts>
