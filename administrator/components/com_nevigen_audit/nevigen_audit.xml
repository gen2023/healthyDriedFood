	<version>1.2.0</version>
	<description>COM_NEVIGEN_AUDIT_DESCRIPTION</description>
	<namespace path="src">Joomla\Component\NevigenAudit</namespace>
	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<administration>
		<menu>COM_NEVIGEN_AUDIT</menu>
