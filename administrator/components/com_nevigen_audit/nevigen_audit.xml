			<folder>services</folder>
			<folder>sql</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/com_nevigen_audit.ini</language>
			<language tag="en-GB">en-GB/com_nevigen_audit.sys.ini</language>
