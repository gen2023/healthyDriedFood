<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Joomla\Component\NevigenAudit\Administrator\Field">
	<fieldset name="search">
		<fields name="filter">
			<field name="search" type="text"
				   label="JSEARCH_FILTER"
				   hint="JSEARCH_FILTER"/>
		</fields>
	</fieldset>
	<fieldset name="filters">
		<fields name="filter">
			<field name="state" type="list"
				   label="JSTATUS"
				   onchange="Joomla.submitFilter(this.form);">
				<option value="">JOPTION_SELECT_PUBLISHED</option>
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
			</field>
			<field name="categories" type="categories"
				   label="JSHOP_CATEGORY"
				   multiple="true"
				   hint="COM_NEVIGEN_AUDIT_CATEGORIES_SELECT"
				   layout="joomla.form.field.list-fancy-select"
				   onchange="Joomla.submitFilter(this.form);" />
			<field name="manufacturer" type="manufacturers"
				   label="JSHOP_MANUFACTURER"
				   onchange="Joomla.submitFilter(this.form);">
				<option value="">COM_NEVIGEN_AUDIT_MANUFACTURERS_SELECT</option>
			</field>
			<field name="labels" type="labels"
				   label="JSHOP_LABEL"
				   onchange="Joomla.submitFilter(this.form);"
				   hint="COM_NEVIGEN_AUDIT_PRODUCTS_LABEL_SELECT"
				   multiple="true"
				   default=""
				   layout="joomla.form.field.list-fancy-select">
			</field>
			<field name="vendor" type="vendors"
				   label="JSHOP_VENDOR"
				   onchange="Joomla.submitFilter(this.form);">
				<option value="">COM_NEVIGEN_AUDIT_VENDORS_SELECT</option>
			</field>
			<field name="image" type="list"
				   label="COM_NEVIGEN_AUDIT_PRODUCTS_IMAGES"
				   onchange="Joomla.submitFilter(this.form);">
				<option value="">COM_NEVIGEN_AUDIT_PRODUCTS_IMAGES_SELECT</option>
				<option value="1">COM_NEVIGEN_AUDIT_PRODUCTS_IMAGES_YES</option>
				<option value="0">COM_NEVIGEN_AUDIT_PRODUCTS_IMAGES_NO</option>
			</field>
		</fields>
	</fieldset>
	<fieldset name="list">
		<fields name="list">
			<field name="fullordering" type="hidden"
				   label="JGLOBAL_SORT_BY"
				   onchange="Joomla.submitFilter(this.form);"/>
			<field name="limit" type="limitbox"
				   label="JGLOBAL_LIST_LIMIT"
				   onchange="Joomla.submitFilter(this.form);"
				   default="25"/>
		</fields>
	</fieldset>
</form>
